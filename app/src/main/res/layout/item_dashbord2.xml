<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:layout_margin="13.5dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagecook"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cook" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="125dp"
                    android:background="@drawable/rect_yellowbutton"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="OPEN"
                        android:letterSpacing="0.0625"
                        android:textSize="13.3sp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.0525"
                android:fontFamily="@font/roboto_regular"
                android:text="Ayam goreng ninit, Pogung Kidul"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"
                android:layout_marginTop="10.2dp"
                android:fontFamily="@font/roboto_regular"
                android:text="7 km    Yogyakarta"
                android:textColor="#828282"
                android:letterSpacing="0.0425"
                android:textSize="13.5sp"
                android:paddingBottom="12.5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>