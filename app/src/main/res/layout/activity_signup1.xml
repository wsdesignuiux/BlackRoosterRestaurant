<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Signup1Activity">

    <include layout="@layout/toolbar_signup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="45.3dp"
        android:layout_marginRight="46.5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135.7dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Your name?"
            android:letterSpacing="0.0925"
            android:textColor="@color/yellow"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Enter valid name"
            android:letterSpacing="0.0925"
            android:textColor="@color/gray"
            android:textSize="13.3sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39.7dp"
            android:letterSpacing="0.0925"
            android:fontFamily="@font/roboto_regular"
            android:text="FIRST NAME"
            android:textColor="@color/gray"
            android:textSize="11.5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.5dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:hint="Joejoo"
                android:inputType="text"
                android:textColorHint="@color/yellow"
                android:background="#00000000"
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/user_yellow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/yellow"
            android:layout_marginTop="11.7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33.8dp"
            android:letterSpacing="0.0925"
            android:fontFamily="@font/roboto_regular"
            android:text="LAST NAME"
            android:textColor="@color/gray"
            android:textSize="11.5sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <EditText
                android:fontFamily="@font/roboto_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Perlan"
                android:inputType="text"
                android:letterSpacing="0.0925"
                android:textColorHint="@color/black"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/user_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#33707070"
            android:layout_marginTop="12dp"/>

        <Button
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="70.5dp"
            android:textSize="16sp"
            android:letterSpacing="0.0625"
            android:textAllCaps="false"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rect_yellow"/>

    </LinearLayout>
</LinearLayout>